<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_12"
    android:background="@color/white"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/cart_image_size"
        android:layout_height="@dimen/cart_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginBottom="@dimen/padding_12"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:elevation="3dp"
        android:scaleType="fitCenter" />


    <ImageView
        android:id="@+id/remove_product"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_12"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/remove" />

    <TextView
        android:id="@+id/product_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_toRightOf="@+id/product_image"
        android:text="product title"
        android:theme="@style/titleStyle" />


    <TextView
        android:id="@+id/product_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_title_view"
        android:layout_marginLeft="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_toRightOf="@+id/product_image"
        android:text="$00"
        android:theme="@style/priceStyle" />


</RelativeLayout>